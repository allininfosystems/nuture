<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Webinse_Core::core">
                    <resource id="Webinse_Barcode::barcode" title="Barcode generation and management" sortOrder="10">
                        <resource id="Webinse_Barcode::generator" title="Barcode Generator" sortOrder="10"/>
                        <resource id="Webinse_Barcode::import" title="Import Barcode" sortOrder="15"/>
                        <resource id="Webinse_Barcode::scan" title="Scan Barcode" sortOrder="20"/>
                        <resource id="Webinse_Barcode::history" title="History of created barcodes" sortOrder="80"/>
                        <resource id="Webinse_Barcode::barcode_configuration_menu" title="Configuration menu" sortOrder="98"/>
                        <resource id="Webinse_Barcode::barcode_configuration" title="Configuration" sortOrder="99"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>